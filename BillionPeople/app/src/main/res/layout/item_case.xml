<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    android:clickable="true">


    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:swipeEnable="true"
        app:leftSwipe="true"
        app:ios="true"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/ll_contentItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/left_color_frame">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx公司"
                    android:textSize="13sp"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="17dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line_color"
                android:layout_marginLeft="17dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="7dp">


                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一审"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-05-20"
                        android:textColor="#888888"
                        android:textSize="11sp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/amount"/>

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000000"
                        android:textSize="17sp"
                        android:textColor="#FF8840"
                        android:layout_marginLeft="7dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已进行10天"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>
        <!-- 以下都是侧滑菜单的内容依序排列 -->
        <Button
            android:id="@+id/btn_setup"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:background="#FE9B00"
            android:text="人员设置"
            android:textColor="#FFFFFF"
            android:textSize="13sp"/>

        <!--<Button-->
            <!--android:id="@+id/btn_toTop"-->
            <!--android:layout_width="66dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#BCBCBC"-->
            <!--android:clickable="true"-->
            <!--android:text="置顶"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="13sp"/>-->

        <!--<Button-->
            <!--android:id="@+id/btn_delete"-->
            <!--android:layout_width="66dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#FF3434"-->
            <!--android:text="删除"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="13sp"/>-->

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

</LinearLayout>
