<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cases.CaseDetailsActivity"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:id="@+id/ll_parent"
    android:fitsSystemWindows="true">

    <!--<include layout="@layout/main_titlebar"/>-->

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基本情况"
                            android:textColor="@color/green_item"
                            android:textSize="13sp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编辑内容"
                            android:textSize="13sp"
                            android:textColor="@color/green_item"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>

                    <com.jsyrdb.yiren.utils.ClearEditText
                        android:id="@+id/et_basic_situation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="暂无内容"
                        android:gravity="top"
                        android:paddingTop="12dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:lineSpacingExtra="5dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="属性"
                        android:textColor="@color/green_item"
                        android:textSize="13sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:text="勾选标签"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_save_check"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"
                                    android:text="修改"
                                    android:textColor="@color/green_item"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_save_check"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit_save"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"/>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_check_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.jsyrdb.yiren.widget.ExpandListView
                                android:id="@+id/lv_check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@null"
                                android:dividerHeight="0dp"
                                android:layout_marginLeft="18dp"
                                android:layout_marginBottom="14dp">

                            </com.jsyrdb.yiren.widget.ExpandListView>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divide_line_color"
                            android:layout_marginLeft="18dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:text="选择属性标签"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_save_select"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"
                                    android:text="修改"
                                    android:textColor="@color/green_item"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_save_select"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit_save"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="17dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divide_line_color"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="14dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:text="文本属性标签"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_save_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"
                                    android:text="修改"
                                    android:textColor="@color/green_item"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_save_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit_save"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"/>
                            </LinearLayout>

                        </LinearLayout>


                        <com.jsyrdb.yiren.utils.ClearEditText
                            android:id="@+id/et_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="top"
                            android:paddingTop="17dp"
                            android:paddingBottom="14dp"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:lineSpacingExtra="5dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divide_line_color"
                            android:layout_marginLeft="18dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:text="日期范围"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="13sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_save_date_range"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"
                                    android:text="修改"
                                    android:textColor="@color/green_item"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_save_date_range"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit_save"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"/>
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_date_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="18dp">

                            <TextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-07-01"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="至"
                                android:textColor="#888888"
                                android:textSize="14sp"
                                android:layout_marginLeft="21dp"/>

                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-07-05"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_marginLeft="21dp"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divide_line_color"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="14dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:text="日期属性"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_save_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"
                                    android:text="修改"
                                    android:textColor="@color/green_item"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_save_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit_save"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"/>
                            </LinearLayout>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_attribute_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-07-05"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="17dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divide_line_color"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="14dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:text="数字属性"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_save_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"
                                    android:text="修改"
                                    android:textColor="@color/green_item"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_save_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit_save"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="12dp"/>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_num"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="17dp"
                                android:background="@drawable/tag_frame"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:inputType="number"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="17dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                        </LinearLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divide_line_color"
                            android:layout_marginTop="14dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:textColor="@color/green_item"
                        android:textSize="13sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color" />

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:visibility="gone"
                        android:id="@+id/tagFlow_comment"
                        android:layout_marginLeft="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">
                    </com.zhy.view.flowlayout.TagFlowLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文件"
                        android:textColor="@color/green_item"
                        android:textSize="13sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"
                        />

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:visibility="gone"
                        android:id="@+id/tagFlow_file"
                        android:layout_marginLeft="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">
                    </com.zhy.view.flowlayout.TagFlowLayout>

                </LinearLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_start"
                    android:layout_width="275dp"
                    android:layout_height="40dp"
                    android:text="开始任务"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_green_small_circle"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_complete"
                    android:layout_width="275dp"
                    android:layout_height="40dp"
                    android:text="完成任务"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_green_small_circle"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业地址"
                        android:textColor="@color/green_item"
                        android:textSize="13sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp">

                        <ImageView
                            android:id="@+id/iv_address"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:src="@drawable/logo"
                            android:scaleType="fitCenter"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@android:color/black"
                            android:alpha="0.5">


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom">

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="南京市建邺区"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"/>

                            <Button
                                android:id="@+id/btn_navigation"
                                android:background="@drawable/btn_green_circle_corner"
                                android:layout_width="75dp"
                                android:layout_height="22dp"
                                android:text="进入导航"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_centerVertical="true"
                                android:gravity="center" />

                        </RelativeLayout>


                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业执照"
                        android:textColor="@color/green_item"
